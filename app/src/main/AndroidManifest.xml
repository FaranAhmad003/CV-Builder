<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- âœ… Add Permissions Here (Above <application>) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> <!-- (Only needed for older Android versions) -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CV_builder"
        tools:targetApi="31">

        <!-- Set SplashScreen as the first screen -->
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.CV_builder">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity (after splash) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CV_builder" />

        <!-- Additional Activities -->
        <activity android:name=".ProfileActivity" />

    </application>

</manifest>
