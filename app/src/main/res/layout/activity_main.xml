<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_700"
    tools:context=".MainActivity">

    <!-- Toolbar with Centered Image & Text -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:padding="10dp">

        <!-- Centered Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/folder"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CV Builder"
                android:textSize="20sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Profile Picture Button -->
        <Button
            android:id="@+id/btnProfile"
            style="@style/CustomButton"
            android:text="Profile Picture"/>

        <!-- Personal Details Button -->
        <Button
            android:id="@+id/btnPersonalDetails"
            style="@style/CustomButton"
            android:text="Personal Details"/>

        <!-- Summary Button -->
        <Button
            android:id="@+id/btnSummary"
            style="@style/CustomButton"
            android:text="Summary"/>

        <!-- Education Button -->
        <Button
            android:id="@+id/btnEducation"
            style="@style/CustomButton"
            android:text="Education"/>

        <!-- Experience Button -->
        <Button
            android:id="@+id/btnExperience"
            style="@style/CustomButton"
            android:text="Experience"/>

        <!-- Certifications Button -->
        <Button
            android:id="@+id/btnCertifications"
            style="@style/CustomButton"
            android:text="Certifications"/>

        <!-- References Button -->
        <Button
            android:id="@+id/btnReferences"
            style="@style/CustomButton"
            android:text="References"/>
    </LinearLayout>
</LinearLayout>
